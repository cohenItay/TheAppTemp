<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="-1" android:layout_height="-1"
    <RelativeLayout android:id="@id/activityPurchase_relativeLayoutBuyerDetails" android:layout_width="-1" android:layout_height="150dp">
        <TextView android:textSize="20sp" android:id="@id/activityPurchase_pirteyhameshalem" android:layout_width="-2" android:layout_height="-2" android:text="פרטי המשלם:" android:layout_alignParentStart="true" />
        <EditText android:id="@id/activityPurchase_CustomerName" android:layout_width="180dp" android:layout_height="-2" android:hint="שם מלא" android:layout_below="@id/activityPurchase_pirteyhameshalem" android:textDirection="4" android:textAlignment="4" android:layout_marginStart="15dp" android:layout_alignParentStart="true" />
        <EditText android:id="@id/activityPurchase_CustomerEmail" android:layout_width="180dp" android:layout_height="-2" android:hint="e-mail" android:layout_below="@id/activityPurchase_CustomerName" android:textDirection="3" android:textAlignment="4" android:layout_marginStart="15dp" />
    </RelativeLayout>
    <RelativeLayout android:id="@id/activityPurchase_relativeLayoutCreditCard" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="20dp" android:layout_below="@id/activityPurchase_relativeLayoutBuyerDetails">
        <ImageView android:layout_width="200dp" android:layout_height="111dp" android:src="@drawable/cartoon_credit_card" android:layout_centerInParent="true" android:alpha="0.2" />
        <View android:background="0x106000c" android:layout_width="-1" android:layout_height="1dp" />
        <EditText android:id="@id/activityPurchase_CreditCardNum" android:nextFocusDown="@id/activityPurchase_ExpirationDateMM" android:layout_width="250dp" android:layout_height="-2" android:hint="מספר כרטיס אשראי" android:inputType="2" android:textDirection="3" android:textAlignment="4" android:layout_alignParentStart="true" />
        <EditText android:id="@id/activityPurchase_ExpirationDateYY" android:nextFocusDown="@id/activityPurchase_CVV" android:layout_width="50dp" android:layout_height="-2" android:hint="yy" android:layout_below="@id/activityPurchase_CreditCardNum" android:inputType="2" android:textDirection="3" android:textAlignment="4" android:layout_alignParentStart="true" />
        <TextView android:textStyle="1" android:id="@id/activityPurchase_Slash" android:layout_width="-2" android:layout_height="-2" android:text="/" android:layout_alignBaseline="@id/activityPurchase_ExpirationDateYY" android:layout_toEndOf="@id/activityPurchase_ExpirationDateYY" />
        <EditText android:id="@id/activityPurchase_ExpirationDateMM" android:nextFocusDown="@id/activityPurchase_ExpirationDateYY" android:layout_width="50dp" android:layout_height="-2" android:hint="mm" android:layout_alignBaseline="@id/activityPurchase_Slash" android:inputType="2" android:textDirection="3" android:textAlignment="4" android:layout_toEndOf="@id/activityPurchase_Slash" />
        <EditText android:id="@id/activityPurchase_CVV" android:nextFocusDown="@id/activityPurchase_ID" android:layout_width="70dp" android:layout_height="-2" android:layout_marginRight="25dp" android:hint="CVV" android:layout_alignBaseline="@id/activityPurchase_ExpirationDateYY" android:inputType="2" android:textDirection="3" android:textAlignment="4" android:layout_toEndOf="@id/activityPurchase_ExpirationDateMM" />
        <EditText android:id="@id/activityPurchase_ID" android:nextFocusDown="@id/activityPurchase_ticketsAmount" android:layout_width="200dp" android:layout_height="-2" android:layout_marginTop="30dp" android:layout_marginBottom="20dp" android:hint="מספר זהות" android:layout_below="@id/activityPurchase_ExpirationDateYY" android:inputType="2" android:textDirection="3" android:textAlignment="4" android:layout_alignParentStart="true" />
        <View android:background="0x106000c" android:layout_width="-1" android:layout_height="1dp" android:layout_below="@id/activityPurchase_ID" />
    </RelativeLayout>
    <TextView android:textSize="20dp" android:id="@id/activityPurchase_ticketsAmount" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="30dp" android:hint="כמות כרטיסים" android:layout_below="@id/activityPurchase_relativeLayoutCreditCard" android:layout_alignParentStart="true" />
    <Button android:id="@id/activityPurchase_buyBtn" android:layout_width="-2" android:layout_height="-2" android:text="קנה" android:layout_below="@id/activityPurchase_ticketsAmount" android:layout_alignParentStart="true" />
    <TextView android:textSize="19sp" android:id="@id/activityPurchase_priceViewer" android:layout_width="-2" android:layout_height="-2" android:layout_marginRight="5dp" android:text="00" android:layout_alignBaseline="@id/activityPurchase_buyBtn" android:layout_toEndOf="@id/activityPurchase_buyBtn" />
</RelativeLayout>
